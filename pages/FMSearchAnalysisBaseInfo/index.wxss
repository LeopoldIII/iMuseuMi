/* pages/FMSearchAnalysisBaseInfo/index.wxss */
.container {
    height: 100%;
    overflow: hidden;
}

.back {
    width: 16rpx;
    height: 16rpx;
    border-top: 2rpx solid #666;
    border-left: 2rpx solid #666;
    transform: rotate(-45deg);
}

.searchContainer {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    background: #F6F4FC;
    z-index: 1;
}

.searchPage {
    bottom: 0;
}

.search {
    background: #fff;
    padding: 20rpx;
    display: flex;
}

.search icon {
    margin-top: 8rpx;
    margin-right: 20rpx;
}

.search .back{
    margin-left: 10rpx;
    margin-top: 22rpx;
    margin-right: 20rpx;
}

.search input {
    flex: 1;
    height: 60rpx;
    padding: 0 10rpx;
    border-radius: 8rpx;
    /* box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.075); */
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    border: 1px solid #eee;
    background: #F6F4FC;
    font-size: 12px;
}

.searchResult {
    padding: 10rpx;
    height: calc(100% - 100rpx);
    box-sizing: border-box;
}

.hotwords {
    padding: 0 20rpx;
    border-radius: 8rpx;
    height: calc(100% - 20rpx);
    box-sizing: border-box;
    background: #fff;
}

.hotwords view {
    padding: 10rpx 0;
    border-bottom: 1px solid #eee;
}

.btnsType {
    display: flex;
    justify-content: space-between;
    padding: 10rpx 20rpx;
    background: #fff;
}

.btnsType text {
    font-size: 12px;
}

.searchType {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: #F6F4FC;
    z-index: 2;
}

.searchLabel {
    position: relative;
    height: 60rpx;
    line-height: 60rpx;
    padding: 20rpx;
    background: #fff;
    text-align: center;
}

.searchLabel .back {
    position: absolute;
    left: 40rpx;
    top: 50%;
    margin-top: -8rpx;
}